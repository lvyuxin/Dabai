<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_maincontainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_main_menu"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/title_color"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_mainmenu_config"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="配置"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_mainmenu_function"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="功能"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_mainmenu_area"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="区域"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/selector_mainmenu_message"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="消息"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RadioGroup>

</LinearLayout>
