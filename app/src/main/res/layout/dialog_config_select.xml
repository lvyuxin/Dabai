<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/item_config_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_cancle"
            style="@style/host_tv"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="取消"
            android:textSize="14sp" />

        <TextView
            style="@style/host_tv"
            android:layout_centerInParent="true"
            android:text="选择区域" />

        <TextView
            android:id="@+id/tv_sure"
            style="@style/host_tv"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="确定"
            android:textSize="14sp" />
    </RelativeLayout>

    <cn.carbswang.android.numberpickerview.library.NumberPickerView
        android:id="@+id/picker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:npv_DividerColor="@color/white"
        app:npv_ShowCount="5"
        app:npv_ShowDivider="true"
        app:npv_TextColorNormal="@color/grey_black_tv2"
        app:npv_TextColorSelected="@color/white"
        app:npv_TextSizeNormal="14sp"
        app:npv_TextSizeSelected="18sp"
        app:npv_WrapSelectorWheel="false" />
</LinearLayout>
