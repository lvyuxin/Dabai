<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/dialog_bg"
    android:maxHeight="200dp"
    android:minHeight="200dp"
    android:orientation="vertical">

    <include layout="@layout/dialog_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/picker_start_hour"
            android:layout_width="50dp"
            android:layout_height="@dimen/picker_view_height"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:npv_DividerColor="@color/white"
            app:npv_ShowCount="5"
            app:npv_ShowDivider="true"
            app:npv_TextColorNormal="@color/grey_black_tv2"
            app:npv_TextColorSelected="@color/white"
            app:npv_TextSizeNormal="14sp"
            app:npv_TextSizeSelected="18sp"
            app:npv_WrapSelectorWheel="false" />

        <TextView
            android:layout_marginLeft="10dp"
            style="@style/normal_tv"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/picker_start_hour"
            android:textSize="16sp"
            android:text="S" />
    </RelativeLayout>


</LinearLayout>
