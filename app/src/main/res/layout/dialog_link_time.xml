<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/picker_start_hour"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:npv_ShowCount="5"
            app:npv_ShowDivider="true"
            app:npv_TextColorNormal="@color/grey_black_tv2"
            app:npv_TextColorSelected="@color/white"
            app:npv_TextSizeNormal="14sp"
            app:npv_TextSizeSelected="18sp"
            app:npv_WrapSelectorWheel="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/picker_start_minute"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:npv_ShowCount="5"
            app:npv_ShowDivider="true"
            app:npv_TextColorNormal="@color/grey_black_tv2"
            app:npv_TextColorSelected="@color/white"
            app:npv_TextSizeNormal="14sp"
            app:npv_TextSizeSelected="18sp"
            app:npv_WrapSelectorWheel="false"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
<!--结束时间段-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/picker_end_hour"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:npv_ShowCount="5"
            app:npv_ShowDivider="true"
            app:npv_TextColorNormal="@color/grey_black_tv2"
            app:npv_TextColorSelected="@color/white"
            app:npv_TextSizeNormal="14sp"
            app:npv_TextSizeSelected="18sp"
            app:npv_WrapSelectorWheel="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>

        <cn.carbswang.android.numberpickerview.library.NumberPickerView
            android:id="@+id/picker_end_minute"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:npv_ShowCount="5"
            app:npv_ShowDivider="true"
            app:npv_TextColorNormal="@color/grey_black_tv2"
            app:npv_TextColorSelected="@color/white"
            app:npv_TextSizeNormal="14sp"
            app:npv_TextSizeSelected="18sp"
            app:npv_WrapSelectorWheel="false"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>
