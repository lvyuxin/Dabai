<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_theme"
    android:orientation="vertical"
    tools:context="com.suomate.dabaiserver.activity.configsetting.ConfigAddDeviceActivity">

    <com.suomate.dabaiserver.widget.TitleBar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:hasLine="true" />

    <RelativeLayout
        android:id="@+id/rl_area"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView

            style="@style/add_tv_style"
            android:text="区域"
           />
        <TextView
            android:id="@+id/tv_area"
            style="@style/add_right_tv_style"
            android:text="" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/grey_line"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/rl_classification"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            style="@style/add_tv_style"
            android:text="类别"
            />
        <TextView
            android:id="@+id/tv_classify"
            style="@style/add_right_tv_style" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/grey_line"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/rl_niminate"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            style="@style/add_tv_style"
            android:text="命名"
            />
        <TextView
            android:id="@+id/tv_name"
            style="@style/add_right_tv_style"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/grey_line"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/rl_icon_select"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            style="@style/add_tv_style"
            android:text="图标"
            />
        <ImageView
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_moren"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/grey_line"
        android:layout_height="0.5dp"/>
    <Button
        android:layout_marginTop="100dp"
        android:id="@+id/save_btn"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:background="@drawable/save_btn_selector"
        android:text="下一步" />
</LinearLayout>
